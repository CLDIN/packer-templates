{
    "variables": {
        "name": "debian-12",
        "url": "http://compute.o.auroraobjects.eu/iso/debian-12.6.0-amd64-netinst.iso",
        "iso_checksum": "sha256:ade3a4acc465f59ca2496344aab72455945f3277a52afc5a2cae88cdc370fa12",
        "boot_command": "<wait5><esc>auto preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed/debian-12.preseed<enter>"
    },
    "builders": [
        {
            "type": "qemu",
            "iso_url": "{{user `url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "vm_name": "{{user `name`}}",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": true,
            "cpus": 2,
            "memory": 2048,
            "disk_size": "8G",
            "disk_interface": "virtio-scsi",
            "disk_discard": "unmap",
            "disk_compression": true,
            "boot_command": "{{user `boot_command`}}",
            "communicator": "ssh",
            "vnc_bind_address": "[::]",
            "ssh_wait_timeout": "30m",
            "ssh_username": "root",
            "ssh_password": "4pDfYXPDfTrmPy9U",
            "http_directory": "files",
            "http_port_min": 8000,
            "http_port_max": 8100,
            "output_directory": "build_{{user `name`}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "files/apt/debian-12.sources",
            "destination": "/etc/apt/sources.list"
        },
        {
            "type": "file",
            "source": "files/generic/cloud-init.cfg",
            "destination": "/etc/cloud/cloud.cfg"
        },
        {
            "type": "file",
            "source": "files/generic/watchdog.conf",
            "destination": "/etc/watchdog.conf"
        },
        {
            "type": "file",
            "source": "files/generic/99-disable-ipv6-tempaddr.conf",
            "destination": "/etc/sysctl.d/99-disable-ipv6-tempaddr.conf"
        },
        {
            "type": "file",
            "source": "files/generic/99-hotPlugCPU.rules",
            "destination": "/etc/udev/rules.d/99-hotPlugCPU.rules"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/debian-12/post.sh"
            ],
            "execute_command": "sh '{{.Path}}'"
        },
        {
            "type": "shell",
            "inline":
            [
              "fstrim -v /"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "shell-local",
                "command": "mv build_{{user `name`}}/{{user `name`}} build_{{user `name`}}/{{user `name`}}.qcow2"
            },
            {
                "type": "artifice",
                "files": [
                    "build_{{user `name`}}/{{user `name`}}.qcow2"
                ]
            },
            {
                "type": "checksum",
                "checksum_types": [
                    "sha256"
                ],
                "output": "build_{{user `name`}}/{{user `name`}}.checksum"
            },
            {
                "type": "manifest",
                "output": "build_{{user `name`}}/{{user `name`}}.json",
                "strip_path": true,
                "custom_data": {
                    "oscategory": "{{split (user `name`) \"-\" 0}}",
                    "osversion": "{{split (user `name`) \"-\" 1}}",
                    "template_slug": "{{user `name`}}"
                }
            }
        ]
    ]
}
